extends ../layout/common
block content
  if errors
    each error in errors
      .alert.alert-danger= error
  form(action= "/users/create" method="POST" enctype="multipart/form-data")
    div.mb-3
      label.form-label Name
      input.form-control(type="text" name="name", value=values?values.name:"")
    div.mb-3
      label.form-label  Phone Number
      input.form-control(type="text" name="phone", value=values?values.phone:"")
    div.mb-3
      label.form-label  Email
      input.form-control(type="text" name="email",value=values?values.email:"")
    div.mb-3
      label.form-label  Password
      input.form-control(type="password" name="password",value=values?values.password:"")
    div.mb-3
      label.form-label  Avatar
      input#avatar.form-control(type="file", name="avatar")
    button.btn.btn-outline-primary Create